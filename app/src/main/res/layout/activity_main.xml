<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/logo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/name"
        android:layout_marginBottom="40dp"
        android:src="@drawable/img_logo" />

    <RelativeLayout
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_arena"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/human_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_human"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/human_logo"
            android:text="ĐĂNG NHẬP HỆ THỐNG"
            android:textColor="@color/main_color"
            android:textSize="22sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/login_arena"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_margin="20dp">

        <EditText
            android:id="@+id/txtUser"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:paddingHorizontal="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_edit_text" />

        <EditText
            android:id="@+id/txtPass"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_below="@+id/txtUser"
            android:layout_alignParentRight="true"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_edit_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="6dp"
            android:text="Mã sinh viên:"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtPass"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="6dp"
            android:text="Mật khẩu:"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/cbSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPass"
            android:layout_alignLeft="@+id/txtPass"
            android:layout_marginTop="10dp"
            android:buttonTint="@color/stroke" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPass"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/cbSave"
            android:text="Lưu thông tin"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/button"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@id/login_arena"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_btn_bg"
            android:onClick="doForgot"
            android:text="@string/forgot_password"
            android:textColor="@color/white" />

        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_btn_bg"
            android:text="@string/login"
            android:onClick="doLogin"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>